<h2>Edit Historical Landmark</h2>

<form method="post" action="/landmarks/<%=@landmark.id %>">
    <input type="hidden" id="hidden" name="_method" value="patch" />
    <h3>Name: <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name %>"/></h3>
    <h3>Year: <input type="number" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed%>" /></h3>
    <input type="submit" value="Edit Landmark" />
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
